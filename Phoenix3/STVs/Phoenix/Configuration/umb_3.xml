<?xml version="1.0" encoding="UTF-8"?>
<configuration id="p3" label="Phoenix 3.0">
      <description>Phoenix Configuration</description>
      <group path="p3/umb" label="Universal Media Browser Options">
            <description>Media Browser Settings</description>
            <field key="browsingMode" label="Browsing Mode" defaultValue="GRID" type="choice">
                  <description>Determines when the watched icon is displayed in lists of media items.</description>
                  <options>
                        <option name="Grid" value="GRID"/>
                        <option name="List" value="LIST"/>
                  </options>
            </field>
			<field key="filterMode" label="Filtering Mode" defaultValue="QUICK" type="choice">
                  <description>Enable the Filter option menu.</description>
                  <options>
                        <option name="Quick" value="QUICK"/>
                        <option name="Advanced" value="ADVANCED"/>
                  </options>
            </field>
      </group>
</configuration>