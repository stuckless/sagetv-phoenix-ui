<?xml version="1.0" encoding="UTF-8"?>
<configuration id="p3" label="Phoenix 3.0">
   <description>Phoenix Configuration</description>
   <group path="plite/ui" label="UI Options">
	  
      <field fullkey="display_video_on_menus" label="Display video on menus" defaultValue="XIf Active" type="choice">
         <description>Select the way video is shown when other menus are active.</description>
         <options>
            <option name="Never" value="XNever"/>
            <option name="If active" value="XIf Active"/>
            <option name="Always" value="XAlways"/>
         </options>
      </field>

      <field fullkey="video_menu_style" label="Video menu style" defaultValue="XBackground" type="choice">
         <description>Select the way video is shown when other menus are active.</description>
         <options>
            <option name="Background" value="XBackground"/>
            <option name="Window" value="XWindow"/>
         </options>
      </field>

      <field key="alwaysresume" label="Resume without prompting" defaultValue="false" type="boolean">
         <description>When enabled, media files that are partially watched will resume from where they were last viewed without being prompted.</description>
         <options>
            <option name="Enabled" value="true"/>
            <option name="Disabled" value="false"/>
         </options>
      </field>
	  
      <field fullkey="phoenix/mediametadata/fanartCentralFolder" label="Central Fanart Folder" defaultValue="userdata/Phoenix/fanart" type="string">
         <description>Location of the central fanart folder.</description>
      </field>

      <field fullkey="phoenix/homevideos/folders" label="Home video folder" defaultValue="" type="string">
         <description>Location of home video files.</description>
      </field>
	  
	  <field key="confirm_exit" label="Confirm before exiting" defaultValue="true" type="boolean">
         <description>Show the confimation prompt before exiting?</description>
         <options>
            <option name="Yes" value="true"/>
            <option name="No" value="false"/>
         </options>
	  </field>
	  
      <field fullkey="plite/screensaver/type" label="Screensaver type" defaultValue="photos" type="choice">
         <description>Select the way video is shown when other menus are active.</description>
         <options>
            <option name="Imported Photos" value="photos"/>
            <option name="Fanart Backgrounds" value="fanart"/>
            <option name="Weather Backgrounds" value="backgrounds"/>
         </options>
      </field>
	  
	 <field fullkey="screen_saver_wait_time" label="Screensaver timeout" defaultValue="1200000" type="choice">
         <description>Time to wait before the screen saver kicks in.</description>
         <options>
            <option name="20 minutes" value="1200000"/>
            <option name="10 minutes" value="600000"/>
            <option name="5 minutes" value="300000"/>
            <option name="2 minutes" value="120000"/>
         </options>
      </field>

      <field fullkey="plite/screensaver/slideduration" label="Screensaver slide duration" defaultValue="10000" type="choice">
         <description>Time, in milliseconds, for each picture to be displayed</description>
         <options>
            <option name="5 minutes"  value="300000"/>
            <option name="1 minute"   value="60000"/>
            <option name="30 seconds" value="30000"/>
            <option name="10 seconds" value="10000"/>
         </options>
	 </field>
	  
	  
	  

   </group>
</configuration>